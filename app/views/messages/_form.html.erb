    <%= form_for(@message, html: {class: "form-horizontal"}) do |f| %>

      <% if @message.errors.present? %>
        <div class="alert alert-danger">
          <%= alert %>
          <ul>
            <% @message.errors.full_messages.each do |full_message| %>
              <li>
                <%= full_message %>
              </li>
            <% end %> 
          </ul>
        </div>
      <% end %>

      <div class="form-group">
        <label for="message_name" class="col-sm-2 control-label">お名前</label>
        <div class="col-sm-10">
            <%= f.text_field :name, :placeholder => "お名前", class: "form-control" %>
        </div>
      </div>
      <div class="form-group">
        <label for="message_body" class="col-sm-2 control-label">メッセージ</label>
        <div class="col-sm-10">
          <%= f.text_area :body, :placeholder => "メッセージを入力しましょう", class: "form-control" %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <%= f.submit :"投稿する", class: "btn btn-primary" %>
        </div>
      </div>

    <% end %>