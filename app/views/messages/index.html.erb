<div class="panel panel-default">
  <div class="panel-heading">
    メッセージ一覧
  </div>
  
  <div class="panel-body">
    <% @messages.each do |message| %>
    <div class="media">
      <div class="media-body">
        <h4 class="media-heading">[No.<%= message.id %>]<%= message.name %></h4>
        <%= message.body %>
      </div>
    </div>
    <% end %>
  </div><!--panel-body-->

  <div class="panel-footer">

    <%= form_for(@message, html: {class: "form-horizontal"}) do |f| %>

      <div class="form-group">
        <label for="name" class="col-sm-2 control-label">お名前</label>
        <div class="col-sm-10">
            <%= f.text_field :name, :placeholder => "お名前", class: "form-control" %>
        </div>
      </div>
      <div class="form-group">
        <label for="body" class="col-sm-2 control-label">メッセージ</label>
        <div class="col-sm-10">
          <%= f.text_area :body, :placeholder => "メッセージを入力しましょう", class: "form-control" %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <%= f.submit :"投稿する", class: "btn btn-primary" %>
        </div>
      </div>

    <% end %>
  </div><!--panel-footer-->

</div>

